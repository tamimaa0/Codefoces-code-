#include<bits/stdc++.h>

using namespace std;


int main(){

    int t;

    cin >> t ;

    while (t--){

        int n, m;

        cin>>n>>m;

        vector<pair<int , pair<int , int >>>v(n);


        for(int i=0 ; i<n; i++){

            cin>>v[i].first>>v[i].second.first>>v[i].second.second;

        }


        sort(v.begin(), v.end());


        int ans = m ;

        for(int i =0 ; i<n; i++){

            if(v[i].first <= ans && v[i].second.first >= ans ){

                ans = max(ans, v[i].second.second);

            }

        }

        cout<<ans<<endl;



    }


}
