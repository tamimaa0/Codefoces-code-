#include<bits/stdc++.h>
#define ll long long int

using namespace std;


int main(){

    int t;

    cin >> t ;

    while (t--){

        ll n;
        cin >>n;

        vector<ll>v(n) , mini , pre;

       ll x = INT_MAX;

        for(int i = 0; i<n; i++){
             cin>> v[i];
             x = min(x, v[i]);

             mini.push_back(x);
        }

       cout<<mini[0]+mini[1]<<endl;



    }
}
