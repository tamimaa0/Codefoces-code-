#include <bits/stdc++.h>
#define ll long long int
#define db double

const ll N=1e6+10;
using namespace std;

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);

    int t=1;
    cin >> t;

    while (t--)
    {
        int n;
        cin>>n;
        vector<int>v(n);

        int gc = 0;
        for(int i=0; i<n; i++){
            cin>>v[i];
            gc = __gcd(gc, v[i]);
        }

        bool check = true;
        for(int i=0; i<n; i++) {
            if(v[i] != gc)
                check = false;
        }

        if(check)
            cout<<"NO"<<endl;
        else
        {
            cout<<"YES"<<endl;
            int pos = -1;
            for(int i=0; i<n; i++) {
                if(v[i]!=gc) {
                    pos = i;
                    break;
                    
                }
            }
            for(int i=0; i<n; i++) {
                if(i == pos)
                
                    cout<<"1 ";
                else
                    cout<<"2 ";
                    
                    
            }
            cout<<endl;
        }
        
        
    }

    return 0;
}
