#include<bits/stdc++.h>
#define ll long long int
#define cinn(v) for(int i=0; i<n; i++)cin>>v[i]
using namespace std;


int main(){

    int t;

    t =1 ;
    cin >> t ;

    while (t--){

        string a;
        cin>>a;

        int cnt0 = 0 , cnt1 =0;

        for(int i = 0; i<a.size(); i++){
            if(a[i]=='0')
                cnt0++;
            else
                cnt1++;
        }

        if(cnt0== cnt1)
            cout<<0<<endl;
        else
        {
            int swp =0;

            for(int i=0 ; i<a.size(); i++){

                if(a[i]=='0' and cnt1>0){
                    cnt1--;
                } else if(a[i]=='1' and cnt0>0) {
                    cnt0--;

                }else
                {
                    swp= i;
                    break;
                }

            }

            cout<<a.size()-swp<<endl;


        }

    }

    return 0;
}
