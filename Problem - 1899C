#include <bits/stdc++.h>
#define ll long long int
#define db double

const ll N=1e6+10;
using namespace std;

int dp[N];


int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);



    int t=1;
    cin >> t;

    while (t--)
    {
       // memset(dp, -1, sizeof(dp));

        int n;
        cin>>n;

        //vector<int>v(n);

        int v[n];

        for(int i=0; i<n; i++)
            cin>>v[i];

        int ans = v[0];

        int sum = v[0];




        for(int i=1; i<n; i++){

                if(sum<0)
                    sum =0;

            if(abs(v[i-1])%2 !=  abs(v[i])%2){

                sum+=v[i];
               // ans = max(sum, ans);

                //cout<<v[i]<<" ";
            }
            else
                sum = v[i];



            ans = max(sum, ans);

        }

        cout<<ans<<endl;
    }

    return 0;
}
