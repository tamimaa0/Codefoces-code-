#include<bits/stdc++.h>
#define ll long long int
#define cinn(v) for(int i=0; i<n; i++)cin>>v[i]
using namespace std;


int main(){

    ios::sync_with_stdio(false);
    cin.tie(0);

    int t;

    t =1 ;
    cin >> t ;

    while (t--){

        ll n;
        cin>>n;

        vector<int>v(n);
        cinn(v);

        if(n%2){
            cout<<4<<endl;
            cout<<1<<" "<<n-1<<endl;
            cout<<1<<" "<<n-1<<endl;
            cout<<n-1<<" "<<n<<endl;
            cout<<n-1<<" "<<n<<endl;
        }else{

            cout<<2<<endl;
            cout<<1<<" "<<n<<endl;
            cout<<1<<" "<<n<<endl;

        }

    }

    return 0;
}
