#include<bits/stdc++.h>
#define ll long long int
#define cinn(v) for(int i=0; i<n; i++)cin>>v[i]
using namespace std;



int main(){

    int t;

    t =1 ;
    cin >> t ;

    while (t--){

        ll n , m;
        cin>>n>>m;

        vector<pair< ll , ll>>v(n);

        for(int i = 0; i<n; i++)
            cin>>v[i].second;

        for(int i = 0; i<n; i++)
            cin>>v[i].first;

        sort(v.begin(), v.end());

        //for(auto u:v)cout<<u.first<<" "<<u.second<<endl;;cout<<endl;



        ll l =0 , r = n-1, ans =0;

         if(m<=v[l].first){
                ans += (n*m);
                l+=n;
            }

         else
         {
             ans += m;

             while(l<r){

                ans += (min(v[l].first, m)*min(v[l].second, r-l));

                //l++;
                if(v[l].second!=1)
                r-=(v[l].second-1);
                l++;
                //cout<<l<<" " <<r<<endl;
            }
         }


        cout<<ans<<endl;

    }

    return 0;
}
