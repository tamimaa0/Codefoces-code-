#include <bits/stdc++.h>
#define ll long long int
#define db double

const ll N=1e6+10;
using namespace std;

int dp[N];

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);



    int t=1;
    cin >> t;

    while (t--)
    {
        int n , x;
        cin>>n >>x;

        vector<int>v(n);

        for(int i = 0; i<n; i++)
            cin>>v[i];


        ll maxi = 0 ;
        ll mini = 0 ;

        for(int i = 0; i<n ; i++)
        {

            if(v[i]%x !=0){
                maxi += (v[i]/x + 1);
             } else
             {
                 if(i<n-1){
                     maxi += ceil((v[i]+v[i+1])/(double)x );
                     i++;
                 }

                 else
                    maxi += ceil((v[i]+0)/(double)x );


             }
        }

        vector<ll> m ;

        ll sum =0 ;


        for(int i =0 ; i<n; i++){

               // sum+= v [i];

           if(sum +v[i] < x )
           {
               sum += v[i];
           }

           else if (sum % x == 0){

                m.push_back(sum);
                sum = v[i];

           } else {

                sum += v[i];

           }

        }

        m. push_back(sum );

       // for( auto u : m)
        //    cout<<u<<" ";cout<<endl;

        for(auto u : m)
            mini += ceil(u/(db)x);


        cout<<mini <<" "<<maxi<<endl;


    }

    return 0;
}
