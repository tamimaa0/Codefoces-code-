#include <bits/stdc++.h>
#define ll long long int
#define db double

const int N=1e6+10;
using namespace std;

vector<bool>v(N,0);

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);

    //memset(dp,-1, sizeof(dp));


    int t=1;
    cin >> t;



    while (t--)
    {
       int n;
       cin>>n;

       vector<char>v(n);

       for(int i=0; i<n; i++)
            cin>>v[i];

       int num1=0;

       for(int i=0; i<n; i++){

        if(v[i]=='1')
            num1++;



       }

       int ans=0;

       for(int i=0; i<n; i++){
        if(v[i]=='0')
            ans+=num1+1;
        else
            ans+=(num1-1);

       }

       cout<<ans<<endl;


    }

    return 0;

    }
