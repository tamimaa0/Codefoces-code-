#include <bits/stdc++.h>
#define ll long long int
#define db double

const int N=1e6+10;
using namespace std;

vector<bool>v(N,0);

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);

    //memset(dp,-1, sizeof(dp));


    int t=1;
    cin >> t;



    while (t--)
    {
        int n;
        cin>>n;

        vector <int>v(n);

        for(int i=0; i<n; i++)
            cin>>v[i];

        sort(v.begin(), v.end());

        vector<int>even, odd;

        for(int i=0; i<n; i++)
        {
            if(v[i]&1)
                odd.push_back(v[i]);
            else
                even.push_back(v[i]);
        }

        if(even.empty())
        {
            cout<<odd.back()<<endl;

        }else if(odd.empty()){

            cout<<even.back()<<endl;
        }else {


            ll ans=0;

                for(int i=0; i<v.size(); i++){
                    ans+=v[i];
                }
                ans-=odd.size();

                cout<<ans+1<<endl;

        }

    }

    return 0;

    }
