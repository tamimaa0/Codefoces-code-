#include<bits/stdc++.h>
#define ll long long int
#define cinn(v) for(int i=0; i<n; i++)cin>>v[i]
using namespace std;

const int N = 1e7+10;

int bina(vector<int>v, int k, int i){

    int l = i;
    int r = v.size() -1 ;
    int result = -1;



    while(l<=r){

        int mid = (l+r) / 2;

        if(v[mid]<= k){
            l = mid +1;
            result = mid;
        } else
            r = mid - 1;


    }

    return result ;

}

bool is_possible(vector<int> v, int k){

    vector<int> temp;
    temp = v;

    int i =0 ;

    while(k>0){
        //cout<<k<<" "<<bina(v,k,i) <<endl;
        int ind = bina(temp, k,i);
        if(ind == -1)
            return false ;
        temp[ind] = k;
        k--;

        int x= temp[i]+k;

         ind = bina(temp, (temp[i]+k), i);
        if(ind = -1)
            ind =0;

        temp.insert(temp.begin()+ind, x);



       i+=2;

    }


    return true;

}

int ans (vector<int>v){

    int l =0 ;
    int r = 100;
    int result = 0;

    while(l<=r){

        int mid = (l+r)/2;

        if(is_possible(v, mid)){
            l =mid+1 ;
            result =  mid;
        }
        else
            r = mid -1;
    }

    return result ;

}


int main(){

    ios::sync_with_stdio(false);
    cin.tie(0);

    int t;

    t =1 ;
    cin >> t ;

    while (t--){

        ll n ;
        cin>>n ;

        vector<int>v(n);

        cinn(v);

        sort(v.begin(), v.end());
       // cout<<is_possible(v, 2 )<<endl;
        cout<<ans(v)<<endl;



    }
      //main();

    return 0;
}
