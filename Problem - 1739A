#include <bits/stdc++.h>
#define ll long long int
#define db double

const ll N=1e6+10;
using namespace std;

int dp[N];

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);



    int t=1;
    cin >> t;

    while (t--)
    {

      int n , m;
      cin>>n>>m;


      if(n==1)
        cout<<n<<" "<<m<<endl;
      else
      {
          if(n<=3 and m<=3 ){
            cout<<ceil(n/2.0)<<" "<<ceil(m/2.0)<<endl;
          }else
          cout<<1<<" "<<1<<endl;
      }



    }

    return 0;
}
