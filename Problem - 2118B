#include<bits/stdc++.h>
#define ll long long int
#define cinn(v) for(int i=0; i<n; i++)cin>>v[i]
using namespace std;



int main(){

    int t;

    cin >> t ;

    while (t--){

        int n;
        cin>> n;

        int x = n*2 -3;

        cout<<x<<endl;

        bool flag = true;

        int y = 1;
        int z = n-1;

        for(int i = 1; i<=x; i++){

            if(flag){
                if(y<n){
                    cout<<i<<" "<<y<<" "<<n<<endl;
                }

                y++;
                if(y>=n)
                {
                    y= 0;
                    flag = false;
                }


                }else {

                cout<<n-y <<" "<<"1 "<< z<<endl;
                z--;
                y++;

                }

        }

    }

    return 0;
}
