#include <bits/stdc++.h>
#define ll long long int
#define db double

const ll N=1e6+10;
using namespace std;

int dp[N];

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);



    int t=1;
    cin >> t;

    while (t--)
    {
        int n ;

        cin>>n ;

        vector<int >v(n);

        for(int i = 0; i<n ; i++)
            cin>>v[i];

        int ans = INT_MAX;

        for(int i = n-1 ; i>=1 ; i--){

            if(v[i]<v[i-1]){

                    //cout<<" ok "<<i;
                ans = 0;
                break;
            }

            else if(v[i]-v[i-1]==0){
                ans = 1 ;
                break;
            }
            else {

                ans = min(ans , v[i]-v[i-1]);

            }

        }

        if(is_sorted(v.begin(), v.end()) )
            cout<< ans/2 +1  <<endl;
        else
            cout<<0<<endl;



    }

    return 0;
}
