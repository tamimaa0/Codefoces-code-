#include <bits/stdc++.h>
#define ll long long int
#define db double

const ll N=1e6+10;
using namespace std;

int dp[N];

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);



    int t=1;
    cin >> t;

    while (t--)
    {
       // memset(dp, -1, sizeof(dp));

        ll n;
        cin>>n;

        vector<ll>v(n);

       // int v[n];

        for(int i=0; i<n; i++)
            cin>>v[i];


        ll ans =0;

        for(int i=0; i<n/2 ; i++)
        {
            ans = __gcd(ans, abs( v[i] - v[n-i-1]  ));
        }

        cout<<ans<<endl;

    }

    return 0;
}
